<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BusinessActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#f4a500">

    <TextView
        android:id="@+id/countLabel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/questionLabel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:layout_marginTop="30dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/answerBtn1_1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Answer1"
        android:textSize="22sp"
        android:layout_marginTop="80dp"
        android:onClick="checkAnswer"/>

    <Button
        android:id="@+id/answerBtn1_2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Answer2"
        android:textSize="22sp"
        android:layout_marginTop="22dp"
        android:onClick="checkAnswer"/>

    <Button
        android:id="@+id/answerBtn1_3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Answer3"
        android:textSize="22sp"
        android:layout_marginTop="22dp"
        android:onClick="checkAnswer"/>

    <Button
        android:id="@+id/answerBtn1_4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Answer4"
        android:textSize="22sp"
        android:layout_marginTop="22dp"
        android:onClick="checkAnswer"/>
    
</LinearLayout>